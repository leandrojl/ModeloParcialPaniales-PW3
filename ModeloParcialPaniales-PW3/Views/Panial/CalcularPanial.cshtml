@model MVC.Entidades.Panial;

@{
    ViewData["Title"] = "Calculadora de Paniales";
}

<div class="text-center">
    <h1 class="display-4">CALCULE SU PANIAL:</h1>

</div>
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}
<form asp-controller="Calculadora" asp-action="Sumar">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="numero1" class="control-label"></label>
        <input asp-for="numero1" class="form-control" />
        <span asp-validation-for="numero1" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="numero2" class="control-label"></label>
        <input asp-for="numero2" class="form-control" />

        <span asp-validation-for="numero2" class="text-danger"></span>

    </div>
    <input type="hidden" asp-for="operador" value="+" />

    <button type="submit" class="btn btn-primary">SUMAR!</button>
</form>